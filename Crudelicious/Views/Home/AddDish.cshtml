@{
    ViewData["Title"] = "Add Dish";
}
<div>
    @model Dish
    <h1>Add a new dish!</h1>
    <form asp-action="CreateDish" asp-controller="Home" method="POST">
        <div>
            <label asp-for="Chef">Chef's name:</label>
            <input asp-for="Chef">
            <span asp-validation-for="Chef" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Name">Name of dish:</label>
            <input asp-for="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Calories">Calories:</label>
            <input asp-for="Calories">
            <span asp-validation-for="Calories" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Tastiness">Tastiness:</label>
            <select asp-for="Tastiness">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            <span asp-validation-for="Tastiness" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Description">Description:</label>
            <textarea asp-for="Description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <input type="submit" value="Add Dish" class="btn btn-primary">
    </form>
</div>