@model LoginUser 
<p class="fs-1">Log in</p> <!-- This partial will hold the User info -->
<form method="POST" asp-action="Login" asp-controller="User">
    <div class="form-group row p-1">
        <label asp-for="LoginEmail" class="col-sm-4 col-form-label">Email:</label>
        <input asp-for="LoginEmail" class="col-sm-8">
        <span asp-validation-for="LoginEmail" class="text-danger"></span>
    </div>
    <div class="form-group row p-1">
        <label asp-for="LoginPassword" class="col-sm-4 col-form-label">Password:</label>
        <input asp-for="LoginPassword" class="col-sm-8">
        <span asp-validation-for="LoginPassword" class="text-danger"></span>
    </div>
    <input type="submit" value="Log in" class="btn btn-primary">
</form>