@{
    ViewData["Title"] = "Home Page";
}
@model Product
<div class="row">
    <div class="col">
        <p class="fs-4 text-center">New Product</p>
        <form method="POST" asp-controller="Product" asp-action="AddProduct">
            <div class="form-group row p-1">
                <label asp-for="Name" class="col-sm-4 col-form-label">Name:</label>
                <input asp-for="Name" class="col-sm-8">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group row p-1">
                <label asp-for="Description" class="col-sm-4 col-form-label">Description:</label>
                <input asp-for="Description" class="col-sm-8">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group row p-1">
                <label asp-for="Price" class="col-sm-4 col-form-label">Price:</label>
                <input asp-for="Price" class="col-sm-8">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <input type="submit" value="Create" class="btn btn-primary">
        </form>
    </div>
    <div class="col">
        <p class="fs-4 text-center">All Products</p>
        @if (ViewBag.AllProducts.Count > 0)
        {
            @foreach(Product p in ViewBag.AllProducts)
            {
                <p><a href="/products/@p.ProductId">@p.Name</a></p>
            }
        }
        else
        {
            <p>None added yet!</p>
        }
    </div>
</div>
